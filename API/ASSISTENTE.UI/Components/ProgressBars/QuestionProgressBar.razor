<MudGrid Spacing="2" Justify="Justify.Center">
    <MudItem xs="9" Class="d-flex align-center justify-center mud-width-full">
        <MudProgressLinear Color="Color.Tertiary"
                           Value="@Progress"
                           Rounded="true"
                           Size="Size.Large"/>
    </MudItem>
    <MudItem xs="3" Class="d-flex align-center justify-center mud-width-full">
        <MudChip T="string"
                 Icon="@Icons.Material.Outlined.Downloading"
                 Label="true"
                 Color="Color.Success"
                 Size="Size.Small">
            @Information
        </MudChip>
    </MudItem>
</MudGrid>

@code {

    [Parameter] public required int Progress { get; set; }
    [Parameter] public required string Information { get; set; }

}